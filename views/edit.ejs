<% include ./partials/header %>

<div class="ui main text container segment">
    <div id="header" class="ui huge header">Edit: "<%= song.title %>" by <%= song.artist %></div>
    <form class="ui form" action="/songs/<%= song._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Song Title</label>
            <input type="text" name="songs[title]" value="<%= song.title %>">
        </div>
        <div class="field">
            <label>Artist</label>
            <input type="text" name="songs[artist]" value="<%= song.artist %>">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="songs[image]" value="<%= song.image %>">
        </div>
         <div class="field">
            <label>YouTube ID</label>
            <input type="text" name="songs[songURL]" value="<%= song.songURL %>">
        </div>
        <input id= "buttoncolor" class="ui button" type="submit">
    </form>
</div>

<% include ./partials/footer %>