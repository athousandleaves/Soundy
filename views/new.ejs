<% include ./partials/header %>

<div class="ui main text container segment">
    <div id="header" class="ui huge header">Post a Song</div>
    <form class="ui form" action="/songs" method="POST">
        <div class="field">
            <label>Song Title</label>
            <input type="text" name="songs[title]" placeholder="Song title">
        </div>
        <div class="field">
            <label>Artist</label>
            <input type="text" name="songs[artist]" placeholder="Artist">
        </div>
        <div class="field">
            <label>Image URL</label>
            <input type="text" name="songs[image]" placeholder="Image URL">
        </div>
         <div class="field">
            <label>YouTube ID</label>
            <input type="text" name="songs[songURL]" placeholder="YouTube ID">
        </div>
        <input id= "buttoncolor" class="ui button" type="submit">
    </form>
</div>

